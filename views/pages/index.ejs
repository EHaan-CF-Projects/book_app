        <main>
            <p <%= books.length %>Books in Collection</p>
                <ul id="bookshelf">
                    <% books.forEach(book => { %>
                        <li class="new-book">
                            <img src=<%= book.image_url %>>
                            <h3><%= book.title %></h3>
                            <h4><%= book.author %></h4>
                            <!-- <button type="submit" id="<%= book.id %>" onclick="<%visitBookDetail()%>">View Details</button> -->
                        </li>
                    <% }) %>
                </ul>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Search Results</title>
    <link href="https://fonts.googleapis.com/css?family=Alegreya|Alegreya+SC|Alegreya+Sans|Alegreya+Sans+SC|Playfair+Display|Playfair+Display+SC" rel="stylesheet">
    <link rel="icon" type="png" href="images/book_favicon.png"/>
    <link rel="stylesheet" type="text/css" href="styles/reset.css"/>
    <link rel="stylesheet" type="text/css" href="styles/base.css"/>
    <link rel="stylesheet" type="text/css" href="styles/icons.css"/>
    <link rel="stylesheet" type="text/css" href="styles/layout.css"/>
    <link rel="stylesheet" type="text/css" href="styles/modules.css"/>
</head>
<body>
    <%include ../../layout/header%>
    <h4 id="searchInfo">Search Results</h4>
    <ul class="flex-container">
        <% books.forEach(book => { %>
            <li class="flex-container search-results-card">
                <img src=<%= book.image_url %> >
                <h3><%= book.title %></h3>
                <h4><%= book.author %></h4>
                <p><%= book.description %></p>
                <button type="button" class="form-button">Select Book</button>
                <form action="/selectbook" method="POST" class="details-form">
                    <input type="text" value="<%= book.title%>" name="title">
                </br>
                    <input type="text" value="<%= book.author%>" name="author">
                </br>
                    <input type="text" value="<%= book.isbn%>" name="isbn">
                </br>
                    <input type="text" value="<%= book.image_url%>" name="image_url">
                </br>
                    <input type="text" value="<%= book.description%>" name="description">
                </br>
                    <input type="text" name="bookshelf" required>
                </br>
                    <input id="save-book" type="submit" value="Save Book" id="submit-form-button">
                </form>
            </li>

        <% }) %>
    </ul>
    
</body>
<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
  <script src="/js/app.js"></script>
</html>
